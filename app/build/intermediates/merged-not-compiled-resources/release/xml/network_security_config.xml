<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">bilibili.com</domain>
        <domain includeSubdomains="true">bilivideo.com</domain>
        <domain includeSubdomains="true">bilivideo.cn</domain>
        <domain includeSubdomains="true">mcdn.bilivideo.cn</domain>
        <domain includeSubdomains="true">upos-sz-mirrorcos.bilivideo.com</domain>
        <domain includeSubdomains="true">b23.tv</domain>
    </domain-config>
</network-security-config>